@import 'vars.styl'

.contact-container
  width 80%
  min-width 300px
  margin 0 auto
  .contact-text
	  text-transform uppercase
	#newsletter
	  margin 50px 0 0 0
	  #newsletter-email
	    width 90%
	    max-width 500px
	    border-top none
	    border-left 1px solid $gray
	    border-right 1px solid $gray
	    border-bottom 1px solid $gray
	    outline none
	    padding 0 5px
	  #newsletter-submit
	    width 90%
	    max-width 500px
	    background-color transparent
	    border 1px solid $gray
	    outline none
	    display block
	    margin 25px 0
#thankyou
  display none
.active-thankyou
  display block !important
  position absolute
  top 0
  left 0
  width 100%
  height 100vh
  z-index 2000
  animation fadeOut ease 2s forwards
  .contact-text
	  text-transform uppercase
	  font-size 42px
	  margin 15% auto
	  width 400px
	  text-align center