@import 'vars.styl'

.dashboard-container
  width 85%
  margin 0 auto
  min-width 300px
  .dashboard-title
    text-transform uppercase
  .dashboard-table
    width 100%
    tr
      border 1px solid $gray
      .delete-user
        background-color $red
        color #fff
        text-align center
#delete-user-modal
  background-color rgba(0,0,0,.5)
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  display none
  .inner-container
    width 90%
    max-width 400px
    padding 10px
    margin 5% auto
    background-color #fff
    .delete-user-text
      text-align center
    .delete-user-btn
      width 100px
      display block
      margin 15px auto
      color #fff
      border 2px dotted #000
    #delete-user-yes
      background-color $red
    #delete-user-no
      background-color $forest