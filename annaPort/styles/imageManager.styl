@import 'vars.styl'

.image-upload-title
  width 95%
  margin 0 auto 15px auto
.image-upload-container
  width 95%
  margin 0 auto
  border 1px solid #000
  padding 5px
  height 100px
.images-container
  width 95%
  margin 0 auto
  .image
    .delete-container
      background-color rgba(0,0,0,.8)
      color #fff
      width 100%
      height 100px
      padding 3px 0 0 0
      display none
      margin-top 75px
      .delete-sub-container
        width 100px
        margin 0 auto
        padding 25px 0
        border 1px solid #fff
        i
          text-align center
          font-size 3em
          width 100%