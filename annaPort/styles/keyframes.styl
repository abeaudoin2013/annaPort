@keyframes colorPulse {
  0% {
    color #fff
  }
  100% {
    color $red
  }
}

@keyframes active {
  0% {
    background-color transparent
  }
  100% {
    background-color rgba(0,0,0,.9)
  }
}
@keyframes inactive {
  0% {
    background-color rgba(0,0,0,.9)
  }
  100% {
    background-color transparent
  }
}
@keyframes picture-rotate {
  0% {
    transform rotate(25deg)
    margin-top 0
  }
  100% {
    transform rotate(0deg)
    margin-top 5%
  }
}
@keyframes picture-slide-out {
  0% {
    width 90%
    transform rotate(0deg)
    margin-left 0
  }
  100% {
    margin-left -100vw
    transform rotate(25deg)
  }
}
@keyframes picture-grow {
  100% {
    width 90%
  }
}
@keyframes slide-down {
  0% {
    margin-top -100vh
  }
  100% {
    margin-top 0vh
  }
}

@keyframes fadeOut {
  0% {
    background-color rgba(0,0,0,.8)
    color #fff
  }
  100% {
    background-color transparent
    color transparent
  }
}