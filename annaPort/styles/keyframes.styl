@import 'vars.styl'

@keyframes goUp {
  0% {
    margin-top 0px
  }
  100% {
    margin-top -25px
  }
}

@keyframes goDown {
  0% {
    margin-top -25px
  }
  100% {
    margin-top 0px
  }
}

@keyframes slideDown {
  0% {
    height 0px
  }
  100% {
    height 50px
  }
}

@keyframes slideUp {
  0% {
    height 50px
  }
  100% {
    height 0px
  }
}

@keyframes navClosed {
  0% {
    width 100%
    padding-bottom 25px
    padding-top 25px
    border-radius 0px
  }
  100% {
    width 60px
    height 60px
    padding-bottom 0px
    padding-top 0px
    border-radius 30px
  }
}

@keyframes navOpen {
  0% {
    width 60px
    height 60px
    padding-bottom 0px
    padding-top 0px
    border-radius 30px
  }
  100% {
    width 100%
    padding-bottom 25px
    padding-top 25px
    border-radius 0px
  }
}

